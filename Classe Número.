    private void OKActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_OKActionPerformed
        // Fiz um Botão chamado "OK" para poder Cadastrar os Números Digitados pelo o Usuário!
        
        Números.setText("Números: " + Integer.parseInt(JOptionPane.showInputDialog(null, " Digite os Números para serem Cadastrados: ")));
    }//GEN-LAST:event_OKActionPerformed

    private void ExibirActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_ExibirActionPerformed
        // TODO add your handling code here:
        double maiornumero = 0;
        double menornumero = 0;
        double contador = 0;
        double num;
        num = Double.parseDouble(Números.getText());
            for(int i = 0; i >= num; i++) {
            if(num > maiornumero){
                maiornumero = num; 
            }
            if(num < menornumero){
                menornumero = num; 
            }
            contador++;
        }
        Maior.setText (String.valueOf (maiornumero));
        MenorNúmero.setText (String.valueOf (menornumero));
        Média.setText (String.valueOf (num/contador));        
    }//GEN-LAST:event_ExibirActionPerformed

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed
       // Adicionei um Botão para finalizar o Programa!
       
        System.exit(0);
    }//GEN-LAST:event_jButton3ActionPerformed

    private void LimparActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_LimparActionPerformed
        // Adicionei um Botão para Limpar o Programa!
        
        Números.setText("");
    }//GEN-LAST:event_LimparActionPerformed

